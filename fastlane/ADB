#start emulator from device list
def start_emulators(device_list)
    emulators = device_list.split(";")
    emulators.each{ |emulator|
        puts "Starting emulator: #{emulator}"
        sh("sh scripts/emulators/#{emulator}.sh")
    }
end

#starts emulator
def start_emulator(emulator)
    sh("sh scripts/emulators/#{emulator}.sh")
end

#close all emulators
def close_emulators
    sh("sh scripts/close_emulators.sh")
end

#wait for emulators to boot up
def wait_for_emulator_to_boot
    sh("sh scripts/wait_for_emulator_to_boot.sh")
end